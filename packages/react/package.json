{
  "name": "winba-react",
  "version": "1.0.0",
  "description": "React hooks and components for Winba SDK",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsup src/index.ts --watch --format cjs,esm --dts",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@thirdweb-dev/react": "^3.0.0",  // Thirdweb React SDK
    "@thirdweb-dev/sdk": "^3.0.0",    // Thirdweb SDK
    "ethers": "^5.7.0",               // ethers.js for blockchain interaction
    "typescript": "^5.2.2",           // TypeScript for type definitions
    "dotenv": "^10.0.0"               // dotenv for environment variable management
  },
  "devDependencies": {
    "eslint": "^8.48.0",              // ESLint for linting
    "tsup": "^7.2.0",                 // tsup for building the package
    "@types/react": "^18.0.0",        // TypeScript definitions for React
    "@types/node": "^18.0.0",         // TypeScript definitions for Node.js
    "@types/ethers": "^5.7.0"         // TypeScript definitions for ethers.js
  },
  "peerDependencies": {
    "react": "^18.0.0",               // React as a peer dependency
    "react-dom": "^18.0.0"            // React DOM as a peer dependency
  },
  "keywords": [
    "winba",
    "react",
    "blockchain",
    "smartwallet",
    "thirdweb"
  ],
  "author": "Your Name",
  "license": "MIT"
}
